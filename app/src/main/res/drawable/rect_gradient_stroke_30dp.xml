<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="315"
            android:centerColor="@color/color_primary"
            android:startColor="@color/color_secondary"
            android:endColor="@color/color_primary_dark"
            android:type="linear" />
        <size android:width="24dp"
            android:height="24dp"/>
    </shape>
</item>

<item
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp"
    android:top="2dp">
    <shape android:shape="rectangle" >
        <gradient
            android:angle="315"
            android:centerColor="#035D31F6"
            android:startColor="#0000C4CC"
            android:endColor="@color/color_primary_dark"
            android:type="linear" />
    </shape>
</item>
</layer-list>
